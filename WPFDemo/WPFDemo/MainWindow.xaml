<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="Btn1" x:Uid="Btn1" Content="Button" HorizontalAlignment="Left" Margin="24,101,0,0" VerticalAlignment="Top" Width="75" Click="Btn1_Click"/>
        <TextBox x:Name="TBo1" x:Uid="TextB1" HorizontalAlignment="Left" Height="23" Margin="24,23,0,0" TextWrapping="Wrap" Text="Nimi" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="TBl1" HorizontalAlignment="Left" Margin="87,223,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="276"/>
        
        <Button x:Name="BtnEnlargeText" Content="Enlarge" HorizontalAlignment="Left" Margin="251,101,0,0" VerticalAlignment="Top" Width="75" Click="BtnEnlargeText_Click"/>
        <ComboBox x:Name="CmbColors" HorizontalAlignment="Left" Margin="243,23,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <ListBoxItem Content="Red"/>
            <ListBoxItem Content="Green"/>
            <ListBoxItem Content="Blue"/>
        </ComboBox>

    </Grid>
    
</Window>
