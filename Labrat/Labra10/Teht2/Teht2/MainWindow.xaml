<Window x:Class="Teht2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teht2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="cBoxCurrency" HorizontalAlignment="Left" Margin="26,45,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem Content="Yhdysvallat USD"/>
            <ComboBoxItem Content="Suomi EUR"/>
        </ComboBox>
        <TextBlock x:Name="txtConverted" HorizontalAlignment="Left" Margin="292,46,0,0" TextWrapping="Wrap" Text="Suomi EUR" VerticalAlignment="Top" Height="44" Width="77"/>
        <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Height="23" Margin="168,45,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="50" TextChanged="OnChange"/>
        <TextBlock x:Name="txtConvertedValue" HorizontalAlignment="Left" Margin="374,46,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>

    </Grid>
</Window>
